package rmi.interfaces;
import javax.sound.sampled.*;

import java.applet.Applet;
import java.applet.AudioClip;
import java.io.File;
import java.io.InputStream;
import java.net.MalformedURLException;
import java.net.URI;
import java.util.Random;

public class Sound {

  public void run(int ID) {
	  File f;
	  URI uri;
	  
	  switch(ID)
	  {
	  case 1:
		  
		  InputStream is = getClass().getResourceAsStream("Sounds\\imperial_march.wav");
		  javax.sound.sampled.AudioInputStream audioInputStream = AudioSystem.getAudioInputStream(is);
		  javax.sound.sampled.Clip clip;
		  clip.open();
		  clip.start();
		  
		  
		  /*
		  f=new File("Sounds\\imperial_march.wav");
		  try {
			  uri=f.toURI();
			  AudioClip clip = Applet.newAudioClip(uri.toURL());
			  clip.play();
		  }
		  catch (MalformedURLException e1){
			  e1.printStackTrace();
		  }*/
		  break;
    
    
	  case 2:
		  f=new File("Sounds\\Sarafina.wav");
		  try {
			  uri=f.toURI();
			  AudioClip clip = Applet.newAudioClip(uri.toURL());
			  clip.play();
		  }
		  catch (MalformedURLException e1){
			  e1.printStackTrace();
		  }
		  break;
 
	  case 3:
		  f=new File("Sounds\\push_it.wav");
		  try {
			  uri=f.toURI();
			  AudioClip clip = Applet.newAudioClip(uri.toURL());
			  clip.play();
		  }
		  catch (MalformedURLException e1){
			  e1.printStackTrace();
		  }
		  break;
   
	  }
  }
