package vermittler;

import java.rmi.Naming;
import java.rmi.RemoteException;
import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;

import application.MainScreenInterface;
import rmi.interfaces.MitarbeiterRemote;

public class Vermittler extends java.rmi.server.UnicastRemoteObject {

	public Vermittler() throws RemoteException {
		super();
	}
	
	public void start() {
		try {
			
			Registry registry = LocateRegistry.createRegistry(1099);
			
			while ( true ) {
				
				Thread.sleep(5000);
				
				final String[] services = registry.list();
				for (int i = 0; i < services.length; i++) {
					String service = services[i];
					//MitarbeiterRemote c = (MitarbeiterRemote) Naming.lookup("rmi://localhost:1099/"+string);
					System.out.println("Servicename: "+ service);
				}
				for ( String service : services ) {
					
					System.out.println("Servicename: "+ service);
					
				}
				
			}
			//ButtonInterface bi = (ButtonInterface) registry.lookup("button");
			//bi.register(this);
			
			//li = (LampInterface) registry.lookup("lamp");
		} catch (Exception e) {
			System.out.println(e);
		}
	}
	
	public static void main(String[] args) throws RemoteException {
		Vermittler s = new Vermittler();
		s.start();
}

}
